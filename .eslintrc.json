{
  "parser"  : "babel-eslint",
  "extends" : [
    "prettier"
  ],
  "plugins": [
      "import",
      "promise"
  ],
  "env"     : {
    "node" : true,
    "es6" : true
  },
  "globals" : {
    "Action"       : false,
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__DEBUG_NEW_WINDOW__" : false,
    "__BASENAME__" : false
  },
  "rules": {
    "no-undef" : [2],
    "semi" : [2, "never"],
    "max-len": [2, 150, 2],
    "quotes": [2, "single", { "allowTemplateLiterals": true }],
    "no-duplicate-imports" : [0]
  },
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
          "experimentalObjectRestSpread": true
      }
  }
}
